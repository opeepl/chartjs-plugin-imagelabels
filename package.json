{
    "name": "chartjs-plugin-imagelabels",
    "version": "1.0.0",
    "description": "An image labels plugin for ChartJS 3",
    "main": "dist/index.js",
    "scripts": {
        "test": "jest --config jestconfig.json",
        "copy-svg": "cp src/*.svg dist/",
        "build": "tsc && npm run copy-svg",
        "lint": "eslint . --ext .ts",
        "lint-and-fix": "eslint . --ext .ts --fix",
        "prepare": "npm run build",
        "prepublishOnly": "npm test && npm run lint",
        "preversion": "npm run lint && npm test",
        "version": "git add -A src",
        "postversion": "git push && git push --tags"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/opeepl/chartjs-plugin-imagelabels.git"
    },
    "files": [
        "dist/**/*"
    ],
    "types": "dist/index.d.ts",
    "author": "Opeepl Aps",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/opeepl/chartjs-plugin-imagelabels/issues"
    },
    "homepage": "https://github.com/opeepl/chartjs-plugin-imagelabels#readme",
    "devDependencies": {
        "@types/jest": "^29.4.0",
        "@typescript-eslint/eslint-plugin": "^5.53.0",
        "@typescript-eslint/parser": "^5.53.0",
        "chart.js": "^3.9.1",
        "eslint": "^8.34.0",
        "jest": "^29.4.3",
        "ts-jest": "^29.0.5",
        "typescript": "^4.9.5"
    },
    "peerDependencies": {
        "chart.js": "^3.0.0"
    }
}
